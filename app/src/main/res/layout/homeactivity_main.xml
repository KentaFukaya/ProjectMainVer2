<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.virtual_diving.projectmainver2.HomeActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FGButton"
            android:background="@drawable/homeactivity_fgicon"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button"
            android:layout_alignParentTop="true"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            bootstrap:typicon="ty_camera"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logo"
        android:src="@drawable/homeactivity_titlelogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="124dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VDButton"
        android:background="@drawable/homeactivity_dmicon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />
    <!-- backgroud="null"でボタンの背景色を透過しています。-->

    <!-- 図鑑モードに切り替わるボタンですが、まだビジュアルを作成していません。ごめんなさい。
 　  　大きさをもう少し小さくして端っこに寄せようと思うのですがいかがでしょうか -->

</RelativeLayout>
